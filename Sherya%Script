local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/memejames/elerium-v2-ui-library/main/Library", true))()
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local window = library:AddWindow("Sherya Script", {
    main_color = Color3.fromRGB(200, 0, 255),
    min_size = Vector2.new(660, 660),
    can_resize = false,
})

local mainTab = window:AddTab("Main")
local miscTab = window:AddTab("Misc")
local killerTab = window:AddTab("Killer")
local playersTab = window:AddTab("Players")
local creditsTab = window:AddTab("Credits")

mainTab:Show()

-- Auto Golpe --
local autoClick = false

mainTab:AddToggle("Auto Golpe", function(state)
    autoClick = state

    if autoClick then
        local backpack = player:WaitForChild("Backpack")
        local character = player.Character or player.CharacterAdded:Wait()
        local tool = backpack:FindFirstChildOfClass("Tool")
        if tool then
            tool.Parent = character
        end

        task.spawn(function()
            local vim = game:GetService("VirtualInputManager")
            while autoClick do
                task.wait(0.1)
                vim:SendMouseButtonEvent(0, 0, 0, true, game, 1)
                vim:SendMouseButtonEvent(0, 0, 0, false, game, 1)
            end
        end)
    end
end)

-- Auto Atracci√≥n Orbes --
local runService = game:GetService("RunService")
local autoAttract = false
local connection

local function getOrbFolder()
    return workspace:FindFirstChild("Orbs") or workspace:FindFirstChild("Collectibles")
end

local function toggleAttract(state)
    autoAttract = state

    if autoAttract then
        connection = runService.Heartbeat:Connect(function()
            local character = player.Character
            if not character then return end
            local hrp = character:FindFirstChild("HumanoidRootPart")
            if not hrp then return end

            local orbFolder = getOrbFolder()
            if not orbFolder then return end

            for _, orb in pairs(orbFolder:GetChildren()) do
                if orb:IsA("BasePart") then
                    local direction = (hrp.Position - orb.Position).Unit
                    local speed = 50
                    orb.Velocity = direction * speed
                end
            end
        end)
    else
        if connection then
            connection:Disconnect()
            connection = nil
        end
    end
end

mainTab:AddToggle("Auto Orbes", function(state)
    toggleAttract(state)
end)
